{
    "name": "tarfin-labs/laravel-config",
    "description": "Key value config management for Laravel",
    "keywords": [
        "tarfin-labs",
        "laravel-config"
    ],
    "homepage": "https://github.com/tarfin-labs/laravel-config",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Turan Karatuğ",
            "email": "turan.karatug@tarfin.com",
            "role": "Developer"
        },
        {
            "name": "Faruk Can",
            "email": "faruk.can@tarfin.com",
            "role": "Developer"
        },
        {
            "name": "Yunus Emre Deligöz",
            "email": "emre.deligoz@tarfin.com",
            "role": "Developer"
        },
        {
            "name": "Hakan Özdemir",
            "email": "hakan.ozdemir@tarfin.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1|^8.2|^8.3|^8.4",
        "ext-json": "*",
        "illuminate/support": "^8.49|^9.0|^10.0|^11.0|^12.0",
        "laravel/legacy-factories": "^1.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.23|^7.0|^8.0|^9.0|^10.0",
        "phpunit/phpunit": "^9.5.2|^10.0"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "TarfinLabs\\LaravelConfig\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TarfinLabs\\LaravelConfig\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "TarfinLabs\\LaravelConfig\\LaravelConfigServiceProvider"
            ],
            "aliases": {
                "LaravelConfig": "TarfinLabs\\LaravelConfig\\Facades\\LaravelConfig"
            }
        }
    }
}
